<link rel="stylesheet" href="/stylesheets/index.css">

<!--vip课程列表-->

<div class="vip-course-box">
    <div class="vip-course-text">
        <h1>精品课程，全新升级</h1>
        <p>系统化名师授课，前沿性方法教学，班级化学员管理，实战性成果校验</p>
    </div>
    <div class="vip-course-list">
        {{#each courses}}
            <div class="vip-course-item">
                <div class="left-text">
                    <p class="course-name">
                        {{name}}
                    </p>
                    <p class="course-describe">
                        {{description}}
                    </p>
                    <div class="cooprate-company">
                        <span>学院去向企业：</span>
                        <img src="" alt="" >
                        <img src="" alt="">
                    </div>
                    <img src="https://img.kaikeba.com/arrow.png"  class="arrow">
                </div>
                <div class="right-img" style="background: url({{poster}}) no-repeat;background-size: contain;"></div>
            </div>
        {{/each}}
    </div>
</div>